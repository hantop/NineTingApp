<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同编号" />

            <EditText
                android:id="@+id/et_pactID"
                style="@style/MyEditText"
                android:hint="请输入合同编号" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同类型" />

            <TextView
                android:id="@+id/tv_pactType"
                style="@style/MyEditText"
                android:hint="点击选择" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="项目部" />

            <TextView
                android:id="@+id/tv_project"
                style="@style/MyEditText"
                android:hint="点击选择" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同进度" />

            <TextView
                android:id="@+id/tv_pactSchedule"
                style="@style/MyEditText"
                android:hint="点击选择" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同简介" />

            <EditText
                android:id="@+id/et_pactContent"
                style="@style/MyEditText"
                android:gravity="left|top"
                android:hint="请输入合同简介"
                android:minHeight="@dimen/dp150" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同总金额" />

            <EditText
                android:id="@+id/et_pactMoney"
                style="@style/MyEditText"
                android:hint="请输入合同总金额" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同应收款" />

            <EditText
                android:id="@+id/et_pactRealMoney"
                style="@style/MyEditText"
                android:hint="请输入合同应收金额" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同已收款" />


            <EditText
                android:id="@+id/et_pactInMoney"
                style="@style/MyEditText"
                android:hint="请输入合同应已收款" />


            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同未收款" />

            <EditText
                android:id="@+id/et_pactOutMoney"
                style="@style/MyEditText"
                android:hint="请输入合同应未收款" />

            <LinearLayout
                android:id="@+id/ll_addMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/MyEditTextTitle"
                    android:text="本次已收款" />

                <EditText
                    android:id="@+id/et_addMoney"
                    style="@style/MyEditText"
                    android:hint="请输入本次已收款" />
            </LinearLayout>

            <TextView
                style="@style/MyEditTextTitle"
                android:text="合同周期" />

            <EditText
                android:id="@+id/et_pactTime"
                style="@style/MyEditText"
                android:hint="请输入合同周期" />


            <Button
                android:id="@+id/btn_inputPact"
                style="@style/MyButton"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginTop="@dimen/dp20"
                android:text="录入合同" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>