<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_6bcfd6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">


        <ImageButton
            android:id="@+id/iv_toolbarBack"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp48"
            android:background="@null"
            android:src="@mipmap/icon_backarrow_white" />


        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp17" />

        <TextView
            android:id="@+id/tv_toolbarMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp6"
            android:padding="@dimen/dp10"
            android:text="查看报表"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp13" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        android:text="汇总"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计维修次数"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom">

                <TextView
                    android:id="@+id/tv_repairAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/tv_monthState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp12" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp30"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计维修金额"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom">

                <TextView
                    android:id="@+id/tv_repairMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp18" />

                <TextView
                    android:id="@+id/tv_quarterState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/dp12" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp50"
        android:text="维修量总趋势"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp16" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:layout_margin="@dimen/dp16" />


    <TextView
        android:id="@+id/tv_lookOneCar_maintenanceRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp16"
        android:drawableRight="@mipmap/icon_right_arrow_white"
        android:gravity="center"
        android:padding="@dimen/dp16"
        android:text="查看单车维修统计"
        android:textColor="@color/color_white" />
</LinearLayout>