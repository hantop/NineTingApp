<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageButton

            android:id="@+id/iv_toolbarBack"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:background="@color/color_white"
            android:src="@mipmap/icon_backarrow" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp45"
            android:layout_centerInParent="true"
            android:background="@color/color_white"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/color_6bcfd7"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/color_6bcfd7"
            app:tabTextAppearance="@style/TabLayoutTitleTextAppearance" />

        <TextView
            android:id="@+id/tv_toolbarMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="操作"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp13"
            android:visibility="gone" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>