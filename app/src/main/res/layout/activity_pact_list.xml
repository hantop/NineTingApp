<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_searchCarNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/input_shape"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:background="@mipmap/iv_search" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="请输入合同编号"
            android:maxLines="1"
            android:padding="@dimen/dp8"
            android:textSize="@dimen/dp13" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/condition_white_shape"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_project"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@mipmap/icon_down_arrow"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="项目部"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp14" />

        </RelativeLayout>


        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/color_e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_pactType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_pactType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@mipmap/icon_down_arrow"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="合同类型"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp14" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/color_e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_pactSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_pactSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@mipmap/icon_down_arrow"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="合同状态"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp14" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp5"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:paddingTop="@dimen/dp5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:text="未收款："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_noMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:text="已收款："
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tv_nowMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp14" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dp8" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>