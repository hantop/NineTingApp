<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/view_title"
        layout="@layout/view_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="2018-08-06"
                android:textColor="@color/color_6bcfd7"
                android:textSize="@dimen/dp14" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="车牌号" />

            <TextView
                android:id="@+id/tv_carNumber"
                style="@style/MyEditText"
                android:hint="点击选择" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="生产方量" />

            <RelativeLayout
                android:id="@+id/rl_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_amount"
                    style="@style/MyEditText"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="m³"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />


            </RelativeLayout>

            <TextView
                style="@style/MyEditTextTitle"
                android:text="8方以下" />


            <EditText
                android:id="@+id/et_eight"
                style="@style/MyEditText" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="8方以下车次" />


            <EditText
                android:id="@+id/et_six"
                style="@style/MyEditText" />

            <TextView
                style="@style/MyEditTextTitle"
                android:text="补方" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_fillThe"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="m³"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>

            <TextView
                style="@style/MyEditTextTitle"
                android:text="剩料" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_remainMaterial"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="m³"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>

            <TextView
                style="@style/MyEditTextTitle"
                android:text="洗料耗时" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_washTime"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="h"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_oilMass_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="加油升数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:id="@+id/rl_oilMass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_oilMass"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="L"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_distance_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="距离基地"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:id="@+id/rl_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:layout_marginTop="0dp"
                    android:id="@+id/et_distance"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="㎞"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="加班时长"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_overTime"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="h"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="加班趟数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />


            <EditText
                android:id="@+id/et_overTime_TrainNumber"
                style="@style/MyEditText"/>


            <TextView
                android:id="@+id/tv_timeConsuming_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="耗时"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:id="@+id/rl_timeConsuming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_timeConsuming"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="h"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="行驶公里数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_travelKm"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="km"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="洗料"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_washing"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="m³"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="水"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/select_shape">


                <EditText
                    android:id="@+id/et_water"
                    android:layout_marginTop="0dp"
                    style="@style/MyEditText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="m³"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp13" />

            </RelativeLayout>

            <TextView
                style="@style/MyEditTextTitle"
                android:text="备注" />

            <EditText
                android:id="@+id/et_remark"
                style="@style/MyEditText"
                android:gravity="left|top"
                android:hint="请输入备注"
                android:minHeight="@dimen/dp100" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/btn_solid_shape"
                android:padding="@dimen/dp10"
                android:text="提交"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp15" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>