<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp16"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp20"
                    android:text="工作台"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/dp16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16">

                    <RelativeLayout
                        android:id="@+id/rl_menu1"
                        style="@style/home_menubg"
                        android:background="@drawable/home_menu1_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu1"
                            android:text="生产录入" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_menu2"
                        style="@style/home_menubg"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@drawable/home_menu2_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu2"
                            android:text="生产统计" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16">

                    <RelativeLayout
                        android:id="@+id/rl_menu3"
                        style="@style/home_menubg"
                        android:background="@drawable/home_menu3_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu4"
                            android:text="生产记录" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_menu4"
                        style="@style/home_menubg"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@drawable/home_menu4_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu1"
                            android:text="维修申请" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16">

                    <RelativeLayout
                        android:id="@+id/rl_menu5"
                        style="@style/home_menubg"
                        android:background="@drawable/home_menu5_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu5"
                            android:text="维修统计" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_menu6"
                        style="@style/home_menubg"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@drawable/home_menu6_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu4"
                            android:text="维修记录" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingRight="@dimen/dp16">

                    <RelativeLayout
                        android:id="@+id/rl_menu7"
                        style="@style/home_menubg"
                        android:background="@drawable/home_menu7_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu6"
                            android:text="设备列表" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_menu8"
                        style="@style/home_menubg"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@drawable/home_menu8_selector">

                        <TextView
                            style="@style/home_menu"
                            android:drawableLeft="@mipmap/icon_menu1"
                            android:text="设备录入" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp16"
                            android:layout_weight="1"
                            android:text="年审提醒"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/dp18" />

                        <TextView
                            android:id="@+id/tv_lookMore_ns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp16"
                            android:text="查看更多"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/dp12" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView_ns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp16"
                            android:layout_weight="1"
                            android:text="强险提醒"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/dp18" />

                        <TextView
                            android:id="@+id/tv_lookMore_qbx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp16"
                            android:text="查看更多"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/dp12" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView_qbx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp16"
                            android:layout_weight="1"
                            android:text="商险提醒"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/dp18" />

                        <TextView
                            android:id="@+id/tv_lookMore_sbx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp16"
                            android:text="查看更多"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/dp12" />
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView_sbx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp20"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp16"
                        android:paddingRight="@dimen/dp16" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>