<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginTop="@dimen/dp20"
                android:text="工作台"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16">

                <RelativeLayout
                    android:id="@+id/rl_menu1"
                    style="@style/home_menubg"
                    android:background="@drawable/home_menu1_selector">

                    <TextView
                        style="@style/home_menu"
                        android:drawableLeft="@mipmap/icon_menu1"
                        android:text="生产录入" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu2"
                    style="@style/home_menubg"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@drawable/home_menu2_selector">

                    <TextView
                        style="@style/home_menu"
                        android:drawableLeft="@mipmap/icon_menu2"
                        android:text="生产统计" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16">

                <RelativeLayout
                    android:id="@+id/rl_menu3"
                    style="@style/home_menubg"
                    android:background="@drawable/home_menu4_selector">

                    <TextView
                        style="@style/home_menu"
                        android:drawableLeft="@mipmap/icon_menu4"
                        android:text="生产记录" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/home_menubg"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@drawable/home_menu4_selector"
                    android:visibility="invisible">

                    <TextView
                        style="@style/home_menu"
                        android:drawableLeft="@mipmap/icon_menu4"
                        android:text="维修记录" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>