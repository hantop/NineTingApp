<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/color_333333</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@mipmap/iv_firstbg</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RadioGroupButtonStyle">
        <!-- 这个属性是去掉button 默认样式-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dp12</item>
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
    </style>

    <!-- 进度条 -->
    <style name="CustomDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="MyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="anim_upPop">
        <item name="android:windowEnterAnimation">@anim/popup_up_in</item>
        <item name="android:windowExitAnimation">@anim/popup_up_out</item>
    </style>

    <style name="anim_bottomPop">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>

    <!--自定义用于去除背景-->
    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="list_LL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
        <item name="android:paddingLeft">@dimen/dp10</item>
        <item name="android:paddingRight">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
    </style>

    <style name="list_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp15</item>
    </style>

    <style name="list_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp8</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp15</item>
    </style>

    <style name="home_menubg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/dp30</item>
        <item name="android:paddingTop">@dimen/dp30</item>
    </style>

    <style name="home_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">@dimen/dp10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/dp15</item>
    </style>

</resources>
